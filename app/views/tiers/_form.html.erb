    <%= form.label "Description"%>
    <%= form.text_field :description%>
  </div>
  <div>
    <%= form.label "Necessary Donation to Join Tier"%>
    <%= form.number_field :amount%>
  </div>
  <div>
    <%= form.label "Limit on how many Users can join the Tier"%>
    <%= form.number_field :limit%>
  </div>
  <div>
    <%= form.label "Delivery Date" %>
    <%= form.date_select :delivery_date%>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
