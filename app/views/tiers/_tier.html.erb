<div class="card mx-3" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">$<%= tier.amount %> to join tier <%= tier.name %>!</h5>
    <p class="card-text"><%= tier.description %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Only <%= tier.limit %> can join this tier!</li>
    <li class="list-group-item">Delivery date: <%= tier.delivery_date %></li>
  </ul>
  <div class="card-body">
    <%= button_to "Pledge", {:controller => "pledges", :action => "create", :tier_id => tier.id}, :method => :post %>
  </div>
</div>
