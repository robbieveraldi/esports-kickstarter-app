<nav class="navbar navbar-dark" style="background-color: lightslategrey;">
  <div class="container justify-content-center">
    <a href="/projects" class="btn btn-secondary mx-2" role="button">All</a>
    <a href="/projects?category=1" class="btn btn-secondary mx-2 my-1" role="button">Call of Duty</a>
    <a href="/projects?category=2" class="btn btn-secondary mx-2 my-1" role="button">Apex</a>
    <a href="/projects?category=3" class="btn btn-secondary mx-2 my-1" role="button">Fortnite</a>
    <a href="/projects?category=4" class="btn btn-secondary mx-2 my-1" role="button">Minecraft</a>
  </div>
</nav>
<div class="container">
  <div class="row align-items-start justify-content-center">
    <% @projects.each do |project| %>
      <div class="card bg-dark text-white mx-2 my-4">
        <img style="height:250px;width:250px;" class="card-img" src="<%= project.logo %>" alt="Card image">
        <div class="card-header">
          <ul class="nav nav-pills card-header-pills">
            <li class="nav-item">
              <%= link_to "More Info!", project, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" href="#"><%= project.goal_amount %></a>
            </li>
          </ul>
        </div>
        <div class="card-img-overlay" style="height:250px;width:250px;">
          <h5 class="card-title"><%= project.title %></h5>
          <%# <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> %>
          <p class="card-text">Deadline: <%= project.end_date %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>