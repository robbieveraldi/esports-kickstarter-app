<h1>Edit Project</h1>
<%= form_with model: @project do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
        <% project.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
        <% project.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :goal_amount %>
    <%= form.number_field :goal_amount %>
        <% project.errors.full_messages_for(:goal_amount).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :end_date %>
    <%= form.date_select :end_date %>
        <% project.errors.full_messages_for(:end_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end%>