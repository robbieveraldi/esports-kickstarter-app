<h1>Project info</h1>
<h2><%= @project.title %></h2>
<p>Description: <%= @project.description %></p>
<p>Goal Amount: <%= @project.goal_amount %></p>
<p>Start Date: <%= @project.start_date %></p>
<p>End Date: <%= @project.end_date %></p>
<hr>
<%= render @tier %>
<a href="/projects">Back to all projects</a>
<%# if statement to only show edit button if person is logged in and owns the project %>
<% if current_user && current_user.id == @project.user_id%>
    <a href="<%= edit_project_path(@project) %>">Edit</a>
  <% end %> 
<%= link_to "Destroy Project", project_path(@project), data: {turbo_method: :delete} %>
